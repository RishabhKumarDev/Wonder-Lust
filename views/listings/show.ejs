<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-lg-8 offset-lg-2">
                <h3>Listing Details</h3>
            </div>
            <div class="card col-lg-6 offset-lg-2">
                <img src="<%= listing.image.url %>" class="card-img-top card-img-top-show"
                    alt="<%= listing.image.filename %>">
                <div class="card-body">
                    <p class="card-text">
                    <h5 class="card-title">
                        <%= listing.title %>
                    </h5> <br>
                    <%= listing.description %><br>
                        &#8377 <%= listing.price.toLocaleString("en-IN") %> /night<br>
                            <i class="fa-solid fa-location-dot"> </i>
                            <%= listing.location %><br>
                                <i class="fa-solid fa-earth-asia"></i>
                                <%= listing.country %>
                                    </p>
                </div>
            </div>
            <div class="btns mb-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-lg-2 col-lg-1">Edit</a>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark offset-4 del">DELETE</button>
                </form>
            </div>

        </div>
    </body>